<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ai.agent.station.infrastructure.dao.ClientDao">

    <resultMap id="ClientMap" type="ai.agent.station.infrastructure.dao.po.Client">
        <id column="id" property="id"/>
        <result column="client_id" property="clientId"/>
        <result column="client_name" property="clientName"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="getClientByClientId" resultMap="ClientMap">
        SELECT client_id, client_name, description
        FROM client
        WHERE client_id = #{clientId} AND status = 1
    </select>


</mapper>