<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ai.agent.station.infrastructure.dao.ClientModelDao">

    <resultMap id="ClientModelMap" type="ai.agent.station.infrastructure.dao.po.ClientModel">
        <id column="id" property="id"/>
        <result column="model_id" property="modelId"/>
        <result column="api_id" property="apiId"/>
        <result column="tool_mcp_id" property="toolMcpId"/>
        <result column="model_name" property="modelName"/>
        <result column="model_dimensions" property="modelDimensions"/>
        <result column="model_type" property="modelType"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="getModelByModelId" resultMap="ClientModelMap">
        SELECT model_id, api_id, tool_mcp_id, model_name, model_dimensions, model_type
        FROM client_model
        WHERE model_id = #{modelId} AND status = 1
    </select>

</mapper>